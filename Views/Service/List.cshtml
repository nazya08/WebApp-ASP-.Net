@model IEnumerable<WebApp.Models.Service>

@{
    ViewBag.Title = "Список послуг";
}

<h2>Список послуг</h2>

<table class="table">
    <thead>
        <tr>
            <th>Назва</th>
            <th>Опис</th>
            <th>Ціна</th>
            <th>Дії</th>
        </tr>
    </thead>
    <tbody>
    @foreach (var service in Model)
    {
        <tr>
            <td>@service.Name</td>
            <td>@service.Description</td>
            <td>@service.Price</td>
            <td>
                @Html.ActionLink("Деталі", "Details", new { id = service.Id }) |
                @Html.ActionLink("Редагувати", "Edit", new { id = service.Id }) |
                @Html.ActionLink("Видалити", "Delete", new { id = service.Id })
            </td>
        </tr>
    }
    </tbody>
</table>

@Html.ActionLink("Створити нову послугу", "Create")
